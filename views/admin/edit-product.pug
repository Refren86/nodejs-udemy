extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        form.product-form(action=`/admin/${editing ? 'edit-product' : 'add-product'}`, method="POST")
            div.form-control
                label(for="title") Title
                input(type="text", name="title", value=`${product ? product.title : ''}`)#title
            div.form-control
                label(for="imageUrl") Image URL
                input(type="text", name="imageUrl", value=`${product ? product.imageUrl : ''}`)#imageUrl
            div.form-control
                label(for="price") Price
                input(type="number", name="price", step="0.01", value=`${product ? product.price : ''}`)#price
            div.form-control
                label(for="description") Description
                textarea(name="description", rows='5')#description #{product ? product.description : ''}
            if editing
                input(type="hidden", name="productId", value=product._id)
            button.btn(type="submit") #{editing ? 'Update' : 'Add'} Product